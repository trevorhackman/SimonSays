<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_gravity="center">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/remove_ads_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <hackman.trevor.copycat.ui.remove_ads.RemoveAdsProductButton
        android:id="@+id/remove_ads_product_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_modes_buttons_margin"
        app:layout_constraintRight_toLeftOf="@id/remove_ads_vertical_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$1.49" />

    <hackman.trevor.copycat.ui.remove_ads.RemoveAdsProductButton
        android:id="@+id/remove_ads_product_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_modes_buttons_margin"
        app:layout_constraintLeft_toRightOf="@id/remove_ads_vertical_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$2.99" />

    <hackman.trevor.copycat.ui.remove_ads.RemoveAdsProductButton
        android:id="@+id/remove_ads_product_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_modes_buttons_margin"
        app:layout_constraintRight_toLeftOf="@id/remove_ads_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/remove_ads_product_1"
        tools:text="$4.99" />

    <hackman.trevor.copycat.ui.remove_ads.RemoveAdsProductButton
        android:id="@+id/remove_ads_product_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_modes_buttons_margin"
        app:layout_constraintLeft_toRightOf="@id/remove_ads_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/remove_ads_product_2"
        tools:text="$9.99" />

</androidx.constraintlayout.widget.ConstraintLayout>
